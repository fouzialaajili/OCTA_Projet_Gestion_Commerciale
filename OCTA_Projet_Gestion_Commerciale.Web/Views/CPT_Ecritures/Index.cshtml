@*<link href="~/Content/bootstrap.min.css" rel="stylesheet" />*@





<div>
    @(Html.Infragistics()
                                                                     .Grid<OCTA_Projet_Gestion_Commerciale.Web.ViewModels.CPT_EcrituresViewModel>(Model)
                                                                     .ID("listGridEcritures")
                                                                     .AutoGenerateColumns(false)
                                                                     .AutoGenerateLayouts(false)
                                                                     .RenderCheckboxes(true)
                                                                     .AutoCommit(true)
                                                                     .Columns(column =>
                                                                     {
                                                                         column.For(x => x.Id).Hidden(true);
                                                                         column.For(x => x.Reference).Width("20%").Template("<a href='" + @Url.Action("Create", "CPT_Ecritures") + "/${Id}\' \">${Reference}</a>");
                                                                         column.For(x => x.IdPiece).Width("20%");
                                                                         /*.FormatterFunction("lookupDevise")*/;
                                                                         column.For(x => x.DateEcriture).Width("20%");

                                                                         column.For(x => x.IdCompteG).Hidden(true);
                                                                         column.For(x => x.LibelleEcriture).Width("20%");


                                                                         //column.For(x => x.IdTauxTVA).Width("20%");
                                                                         //column.For(x => x.Taux).Width("20%");
                                                                         //column.For(x => x.IdDeviceTC).Hidden(true);
                                                                         //column.For(x => x.DebitTC).Width("20%");
                                                                         //column.For(x => x.CreditTC).Width("20%").FormatterFunction("lookupActif");
                                                                         //column.For(x => x.IdDeviceTR).Hidden(true);
                                                                         //column.For(x => x.DebitTR).Width("20%");
                                                                         //column.For(x => x.CreditTR).Width("20%");
                                                                         //column.For(x => x.IdTiers).Width("20%");
                                                                         //column.For(x => x.IdSectionANA).Width("20%");
                                                                         //column.For(x => x.IdSectionBUD).Width("20%");
                                                                         //column.For(x => x.IdTypePaiement).Width("20%");
                                                                         //column.For(x => x.CodePointage).Width("20%");
                                                                         //column.For(x => x.IdentifiantUniqueLettrage).Width("20%");
                                                                         //column.For(x => x.Rapprochement).Width("20%");
                                                                         //column.For(x => x.NumOrdre).Width("20%");

                                                                         column.For(x => x.IdDossier).Width("20%");
                                                                         column.For(x => x.IdDossierSite).Hidden(true);

                                                                         //column.Unbound("UnBound").Template("<a href='/Devises/Edit/${DevisesId}'>Edit</a>").Width("20%").HeaderText("Edit");

                                                                     })
                                                                     .Features(feature =>
                                                                     {
                                                                         feature.Updating().EnableAddRow(false).EnableDeleteRow(false).EditMode(GridEditMode.None);

                                                                         feature.Filtering().Mode(FilterMode.Simple).Type(OpType.Local);
                                                                         feature.Sorting();
                                                                         feature.Resizing();
                                                                         feature.ColumnMoving();
                                                                         feature.Paging().PageSize(10);

                                                                     })
                                                                     .PrimaryKey("Id")
                                                                     .DataBind()
                                                                     .Width("100%")
                                                                     .Render()
    )

    <script type="text/javascript">



        $(document).ready(function () {
            var messageErreur = "@(new MvcHtmlString((string)ViewBag.Message))";
            if (messageErreur != "") {
                alert(messageErreur);

            }
        });



    </script>
</div>







