@model OCTA_Projet_Gestion_Commerciale.Web.ViewModels.GEN_Model_ViewModel
@{
    ViewBag.Title = "Suppression de l'exercice";
}

@section buttons {
    <h3 class="panel-title"><strong>@ViewBag.Title</strong></h3>
    <div class="col-md-18">

    </div>
    @using (Html.BeginForm("Delete", "Model", FormMethod.Post, new { onsubmit = "return confirm('Voulez vous supprimer ce model?');" }))

    {
    <ul class="panel-controls">
        @Html.AntiForgeryToken()

        <li><button class="btn btn-danger btn-block" type="submit">Supprimer</button></li>
        <li>&nbsp;</li>
        <li><button class="btn btn-success btn-block" type="button" onclick="window.location.href='@Url.Action("Index")'">Fermer</button></li>
    </ul>
    }
}



<div class="page-content-wrap">




    <div class="form-horizontal ">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            @Html.LabelFor(model => model.Model, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                <div class="input-group">
                    <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                    @Html.EditorFor(model => model.Model, new { htmlAttributes = new { disabled = "disabled", @class = "form-control" } })
                </div>
                @Html.ValidationMessageFor(model => model.Model, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.IdDossier, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.DropDownList("IdSociete", null, string.Empty, htmlAttributes: new { disabled = "disabled", @class = "form-control selectpicker" })
                @Html.ValidationMessageFor(model => model.IdDossier, "", new { @class = "text-danger" })
            </div>
        </div>



    </div>


    <br />
</div>




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
